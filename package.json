{
  "name": "lektr-browser-extension",
  "description": "Capture web highlights and sync Kindle highlights to Lektr",
  "private": true,
  "version": "0.1.0",
  "author": "Lektr",
  "repository": {
    "type": "git",
    "url": "https://github.com/sergmetelin/lektr-browser-extension"
  },
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
